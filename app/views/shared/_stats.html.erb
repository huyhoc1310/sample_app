<% @user ||= current_user %>
<div class="stats">
  <%= link_to "#{@user.following.count} " + t(".following"), following_user_path(@user),
              id: "following", class: "stat" %>
  <%= link_to "#{@user.followers.count} " + t(".followers"), followers_user_path(@user),
              id: "followers", class: "stat" %>
</div>
