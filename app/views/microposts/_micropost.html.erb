<li id="micropost-<%= micropost.id %>">
  <%= link_to gravatar_for(micropost.user, size: Settings.avatar_size),
              micropost.user %>
  <span class="user"><%= link_to micropost.user.name, micropost.user %></span>
  <span class="content"><%= micropost.content %></span>
  <%= image_tag micropost.picture.url if micropost.picture? %>
  <span class="timestamp">
    <%= t "microposts._micropost.posted" %>
    <%= time_ago_in_words(micropost.created_at) %>
    <%= t "microposts._micropost.ago" %>
    <% if current_user?(micropost.user) %>
      <%= link_to t("microposts._micropost.delete"), micropost, method: :delete,
      data: {confirm: t("microposts._micropost.confirm")} %>
    <% end %>
  </span>
</li>
